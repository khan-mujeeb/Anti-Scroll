<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Toolbar
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/eerie_black"

        android:title="@string/app_name"
        android:titleTextColor="@color/white"

        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dashboardCardView"
        android:layout_width="match_parent"
        android:layout_below="@id/appBarLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="-26dp"
        android:backgroundTint="@color/eerie_black"
        android:minHeight="350dp"
        app:cardCornerRadius="26dp"
        android:paddingVertical="26dp"
        app:cardElevation="-1dp"
        android:paddingHorizontal="16dp"
        app:strokeWidth="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="270dp"

                android:id="@+id/pieChart"/>
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/enableServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashboardCardView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="-25dp"
        android:elevation="2dp"
        android:text="@string/start_service"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/blockScrollAppsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashboardCardView"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="50dp"
        android:text="@string/block_scroll_apps"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/no_scroll_app_rc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/blockScrollAppsTextView"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/block_scroll_app_itemview" />

</RelativeLayout>